<div id="insertNew" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="card">
        <div class="card-header">
        Insert Lesson Info
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="lessonOne">Lesson Name</label>
            <input type="text" class="form-control" id="lessonOne" >
          </div>
          <div class="form-group">
            <label for="videoUrl">Video Url</label>
            <input type="text" class="form-control" id="videoUrl" >
          </div>

          <button type="button" class="btn btn-block" style="background:#00E676;" courseName="<%= courseName %>" onclick="insertNewDocument();">Insert</button>
        </div>
      </div>

    </div>
  </div>
</div>
